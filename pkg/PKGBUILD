# Maintainer: Jonas Jaguar <jonasjaguar@jagudev.net>
pkgname=jagudev-video
pkgver=19.06
pkgrel=1
pkgdesc="The default video player for JaguOS"
arch=('x86_64')
url="https://jagudev.net"
license=('GPL3')
depends=(qt5-base qt5-multimedia)
makedepends=(gcc make)
options=()
source=("https://github.com/jonasjaguar/Video/archive/$pkgver.tar.gz")
md5sums=('SKIP')
validpgpkeys=()


build() {
	cd "$srcdir/Video-$pkgver/Video"
	qmake ./Video.pro -spec linux-g++ && /usr/bin/make qmake_all
	make
}

package() {
	cd "$srcdir/Video-$pkgver/Video"
	make INSTALL_ROOT="$pkgdir" install
}
